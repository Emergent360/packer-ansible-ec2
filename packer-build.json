{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "ami_name": "RHEL 8 aarch64 {{isotime `2006-01-02-150405`}}",
        "aws_region": "us-east-2",
        "ssh_username": "ec2-user",
        "vpc_id": "EXISTING-VPC-ID",
        "subnet_id": "EXISTING-SUBNET-ID",
        "red_hat_activation_key": "rhel-key",
        "red_hat_org_id": "12345678",
        "ah_api_token": "00998877665544332211"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "instance_type": "m6g.medium",
        "ebs_optimized": "true",
        "force_deregister": "true",
        "ssh_username": "{{user `ssh_username`}}",
        "communicator": "ssh",
        "associate_public_ip_address": true,
        "subnet_id": "{{user `subnet_id`}}",
        "ami_name": "{{user `ami_name`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "RHEL-8.4.0_HVM-*-arm64-2-Hourly2-GP2",
                "root-device-type": "ebs"
            },
            "owners": ["309956199498"],
            "most_recent": true
        },
        "launch_block_device_mappings": [
            {
               "device_name": "/dev/sda1",
               "volume_size": "20",
               "volume_type": "gp3",
               "iops": "3000",
               "throughput": "125"
            }
          ],
        "run_tags": {
            "Name": "packer-rhel8-arm64-image"
        }
    }],
    "provisioners": [{
            "type": "shell",
            "inline": "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
        },
        {
            "type": "file",
            "source": "provisioners/scripts/venv_wrapper.sh",
            "destination": "/tmp/venv_wrapper.sh"
        },
        {
            "type": "file",
            "source": "provisioners/ansible/collections/requirements.yml",
            "destination": "/tmp/requirements.yml"
        },
        {
            "type": "file",
            "source": "provisioners/ansible/ansible.cfg",
            "destination": "/home/{{user `ssh_username`}}/.ansible.cfg"
        },
        {
            "type": "file",
            "source": "provisioners/ansible/vars/rhel_config.yml",
            "destination": "/tmp/rhel_config.yml"
        },
        {
            "type": "shell",
            "environment_vars": [
                "LANG=en_US.UTF-8",
                "LC_ALL=en_US.UTF-8",
                "api_token={{user `ah_api_token`}}"
              ],
            "script": "./provisioners/scripts/bootstrap.sh"
        },
        {
            "type": "ansible-local",
            "command": "/tmp/venv_wrapper.sh",
            "playbook_file": "./provisioners/ansible/setup-server.yml",
            "extra_arguments": [
                "--extra-vars",
                "\"org_id={{user `red_hat_org_id`}} rhel_activation_key={{user `red_hat_activation_key`}}\""
              
              ]
        }
      ]
}
